<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultDarkTheme" parent="android:Theme">
        <item name="sdlDialogStyle">@style/DialogStyleDark</item>
    </style>

    <style name="DefaultLightTheme" parent="android:Theme.Light">
        <item name="sdlDialogStyle">@style/DialogStyleLight</item>
    </style>

    <style name="CustomDarkTheme" parent="android:Theme">
        <item name="sdlDialogStyle">@style/DialogStyleDark.Custom</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <style name="CustomLightTheme" parent="android:Theme.Light">
        <item name="sdlDialogStyle">@style/DialogStyleLight.Custom</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="DialogStyleLight.Custom">
        <!-- anything can be left out: -->
        <item name="sdlTitleTextColor">@color/dialog_title_text</item>
        <item name="sdlTitleSeparatorColor">@color/dialog_title_separator</item>
        <item name="sdlMessageTextColor">@color/dialog_message_text</item>
        <item name="sdlButtonTextColor">@color/dialog_button_text</item>
        <item name="sdlButtonSeparatorColor">@color/dialog_button_separator</item>
        <item name="sdlButtonBackgroundColorNormal">@color/dialog_button_normal</item>
        <item name="sdlButtonBackgroundColorPressed">@color/dialog_button_pressed</item>
        <item name="sdlButtonBackgroundColorFocused">@color/dialog_button_focused</item>
        <item name="sdlListItemSeparatorColor">@color/dialog_button_separator</item>
        <item name="sdlListItemColorNormal">@color/dialog_button_normal</item>
        <item name="sdlListItemColorPressed">@color/dialog_button_pressed</item>
        <item name="sdlListItemColorFocused">@color/dialog_button_focused</item>
    </style>

    <style name="DialogStyleDark.Custom">
        <!-- anything can be left out: -->
        <item name="sdlTitleTextColor">@color/dialog_title_text_dark</item>
        <item name="sdlTitleSeparatorColor">@color/dialog_title_separator_dark</item>
        <item name="sdlMessageTextColor">@color/dialog_message_text_dark</item>
        <item name="sdlButtonTextColor">@color/dialog_button_text_dark</item>
        <item name="sdlButtonSeparatorColor">@color/dialog_button_separator_dark</item>
        <item name="sdlButtonBackgroundColorNormal">@color/dialog_button_normal_dark</item>
        <item name="sdlButtonBackgroundColorPressed">@color/dialog_button_pressed_dark</item>
        <item name="sdlButtonBackgroundColorFocused">@color/dialog_button_focused_dark</item>
        <item name="sdlListItemSeparatorColor">@color/dialog_button_separator_dark</item>
        <item name="sdlListItemColorNormal">@color/dialog_button_normal</item>
        <item name="sdlListItemColorPressed">@color/dialog_button_pressed</item>
        <item name="sdlListItemColorFocused">@color/dialog_button_focused</item>
    </style>

</resources>